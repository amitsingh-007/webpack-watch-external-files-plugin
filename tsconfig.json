{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["esnext"],
    "strict": true,
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowJs": true,
    "noEmit": true,
    "declaration": true
  },
  "include": [
    "tests",
    "src",
    "tsup.config.ts",
    "vitest.config.ts",
    "xo.config.ts"
  ]
}
